#!/usr/bin/env bash

set -e

if [ -d "${TRAVIS_BUILD_DIR}/build" ]; then
    cd ${TRAVIS_BUILD_DIR}/build
fi

if [ -d "${CIRCLE_WORKING_DIRECTORY}/build" ]; then
    cd ${CIRCLE_WORKING_DIRECTORY}/build
fi

make operator-build-dev

make bundle-build-ocp-dev

make bundle-build-k8s-dev

if [ -d "${CIRCLE_WORKING_DIRECTORY}/build" ]; then
    cd ${CIRCLE_WORKING_DIRECTORY}
fi

if [ -d "${TRAVIS_BUILD_DIR}/build" ]; then
    cd ${TRAVIS_BUILD_DIR}
fi
